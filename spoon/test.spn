const pointer debugout = 0xc000;
const pointer debugin = 0xc001;
const pointer true = 0x7d00;        // constant ff
const pointer false = 0x7d01;       // constant 0

macro write(src, dest)
{
    var int x;
    nfc(x, val(0xff));
    nfc(x, src);
    nfc(dest, x);
}

function main()
{
    while (true)
    {
        write(debugin, debugout);
    }
}
