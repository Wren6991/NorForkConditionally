    PORTC = OE_ROM | WE_ROM;
    for (uint32_t i = ROM_BASE; i < (uint32_t)ROM_BASE + ROM_SIZE; i++)
    {
      if ((i & 0x7f) == 0)
      {
        Serial.print(((uint32_t)i - ROM_BASE) * 100 / ROM_SIZE);
        Serial.println("%");
      }
      uint8_t value = pgm_read_byte(&(rombuffer[i - ROM_BASE])); 
      writeaddress(i);
      uint8_t result;
      if (!programbyte(value, &result))
      {
        failed = true;
        Serial.print("Error at 0x");
        Serial.print(i, HEX);
        Serial.print(": expected 0x");
        Serial.print(value, HEX);
        Serial.print(", got 0x");
        Serial.println(result, HEX);
        break;
      }
    }
    if (!failed)
    {
      Serial.println("Write successful.");
    }
  }
  else if (c == 'P')
  {
    detach();
    while (true)
    {
      Serial.println((uint8_t)read(), HEX);
      delay(10);
    }
  }
  else if (c == 'v')
  { 
    bool failed = false;
    detach();
    PORTC = pin_g | pin_h;
    for (uint32_t i = ROM_BASE; i < (uint32_t)ROM_SIZE + ROM_BASE; i++)
    {
      attach();
      write((i >> 8) & 0xff);
      PORTC |= pin_e;
      PORTC &= ~pin_e;
      write(i & 0xff);
      PORTC |= pin_f;
      PORTC &= ~pin_f;
      detach();
      PORTC &= ~pin_g;
      delayMicroseconds(50);
      uint8_t readback = read();
      if (readback != pgm_read_byte(&(rombuffer[i - ROM_BASE])))
      {
        Serial.print("Verification failed at address 0x");
        Serial.print(i, HEX);
        Serial.print(": expected ");
        Serial.print(pgm_read_byte(&(rombuffer[i])), HEX);
        Serial.print(", got ");
        Serial.println(readback, HEX);
        failed = true;
        break;
      }
      PORTC |= pin_g;
    }
    if (!failed)
      Serial.println("Verification passed.");
  } 
  else if (c != '\n' && c != ' ')
  {
    Serial.println("Usage:");
    Serial.println("p: probe");
    Serial.println("w: write data");    
    Serial.println("a/d: attach/detach");
    Serial.println("(s/c)(efgh): set/clear bit");
    Serial.println("r/R/v: read/write/verify");
  }
  while (Serial.available() <= 0)
    Serial.read();      // eat up all the newlines etc.  
}


